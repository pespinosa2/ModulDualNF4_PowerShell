Function Test-TCPConnection {
    # Bucle per verificar la connexi贸 TCP
    do {
        $HostToTest = Read-Host "Introdueix el nom del host o IP que vols comprovar (exemple: google.com)"
        try {
            Test-Connection -ComputerName $HostToTest -Count 1 -ErrorAction Stop
            [System.Windows.Forms.MessageBox]::Show("Connexi贸 amb $HostToTest establerta correctament.", "Connexi贸 TCP", [System.Windows.Forms.MessageBoxButtons]::OK, [System.Windows.Forms.MessageBoxIcon]::Information)
            $ConnectionSuccess = $true
        } catch {
            Write-Host "No s'ha pogut establir la connexi贸. Comprova l'host o la teva xarxa i torna-ho a provar." -ForegroundColor Red
            $ConnectionSuccess = $false
        }
    } while (-not $ConnectionSuccess)
}

# Executa el script
Test-TCPConnection
